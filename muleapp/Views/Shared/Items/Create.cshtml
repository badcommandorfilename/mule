@model object

<div>
    <p class="control">
        @using (Html.BeginForm("Create", ViewContext.RouteData.Values["controller"].ToString()))
        {
            @Html.EditorForModel()

            <br />
            <div class="form-group columns">
                <div class="column">
                    <input type="submit" value="Save" class="button is-success" />
                    @{Html.RenderPartial("Items/Delete", Model);}
                </div>
            </div>
        }
    </p>
</div>
